version: '3.8'
services:
  # Go тіліндегі Backend
  backend:
    build: ../backend
    ports:
      - "8080:8080"
    environment:
      - DB_URL=postgres://user:pass@db:5432/tis_db

  # PostgreSQL Мәліметтер базасы
  db:
    image: postgres:15
    environment:
      POSTGRES_DB: tis_db
      POSTGRES_PASSWORD: password123
